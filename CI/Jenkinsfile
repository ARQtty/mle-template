                sh 'cd ~/clusterPath'
                sh 'ls -la'
                dir("hadoop-cluster-docker") {
                        sh './start-container.sh'
                    }
            }
            }
        stage('Start hadoop') {
            steps {
                dir("hadoop-cluster-docker/config") {
                        sh './start-hadoop.sh'
                    }
				}
            }
        stage('Run wordcount') {
            steps {
               dir("hadoop-cluster-docker/config") {
                        sh './run-wordcount.sh'
                    }
				}
			}*/
		}
}