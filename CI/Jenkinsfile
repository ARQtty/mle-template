pipeline {
    agent any
options {
        timestamps()
        skipDefaultCheckout(true)
	}
    stages {
        stage('Clone github repository') {
            steps {
                cleanWs()
                bat 'git clone -b main https://github.com/IcyAltair/mle-template.git'
				}
			}
        stage('Create and run docker container') {
            steps {
                script {
                    try {
                        bat 'cd mle-template && docker-compose build'
                        }
                    finally {
                    bat '''
                        cd mle-template
                        docker-compose up -d
                        '''
                        }
				    }
                }
            }
        /*
